---
import BaseLayout from '@layouts/BaseLayout.astro';
import type { Language } from '@custom-types/index';
import es from '@i18n/locales/es.json';
import en from '@i18n/locales/en.json';
import pt from '@i18n/locales/pt.json';
import { STATIC_PATHS } from '@data/languageConfig';
import TeamSection from './components/TeamSection.astro';
import AlliesSection from './components/AlliesSection.astro';

export const prerender = true;

export function getStaticPaths() {
  return STATIC_PATHS;
}

const lang = Astro.params.lang as Language;
const translations = { es, en, pt };
const t = translations[lang];
---

<BaseLayout
  lang={lang}
  title={`${t.about_page.title} - Key Protocol`}
  footer={t.footer}
>
  <div class="min-h-screen">
    <div id="hero" class="h-1"></div>
    <TeamSection lang={lang} />
    <AlliesSection lang={lang} />
  </div>
</BaseLayout>
