---
import BaseLayout from '@layouts/BaseLayout.astro';
import type { Language } from '../../types/language.type';
import es from '@i18n/locales/es.json';
import en from '@i18n/locales/en.json';
import pt from '@i18n/locales/pt.json';

export const prerender = true;

export function getStaticPaths() {
  return [
    {
      params: { lang: 'es' },
    },
    {
      params: { lang: 'en' },
    },
    {
      params: { lang: 'pt' },
    },
  ];
}

import TeamSection from '@components/About/TeamSection.astro';
import AlliesSection from '@components/About/AlliesSection.astro';
import Contact from '@components/Contact/Contact.astro';

const lang = Astro.params.lang as Language;
const translations = { es, en, pt };
const t = translations[lang];
---

<BaseLayout
  lang={lang}
  title={`${t.about_page.title} - Key Protocol`}
  footer={t.footer}
>
  <div class="min-h-screen text-white">
    <div id="hero" class="h-1"></div>
    <TeamSection lang={lang} />
    <AlliesSection lang={lang} />
    <Contact contact={t.contact} />
  </div>
</BaseLayout>
