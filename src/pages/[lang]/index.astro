---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/Hero/Hero.astro';
import Vision from '@components/Vision/Vision.astro';
import Impacto from '@components/Impacto/Impacto.astro';
import Roadmap from '@components/Roadmap/Roadmap.astro';
import Contact from '@components/Contact/Contact.astro';
import type { Language } from '@custom-types/index';
import es from '@i18n/locales/es.json';
import en from '@i18n/locales/en.json';
import pt from '@i18n/locales/pt.json';
import { STATIC_PATHS } from '@data/languageConfig';

export const prerender = true;

export function getStaticPaths() {
  return STATIC_PATHS;
}

const lang = Astro.params.lang as Language;
const translations = { es, en, pt };
const t = translations[lang];
---

<BaseLayout lang={lang} title={t.title} footer={t.footer}>
  <Hero hero={t.hero} />
  <Vision vision={t.vision} />
  <Impacto impacto={t.impacto} />
  <Roadmap roadmap={t.roadmap} />
  <Contact contact={t.contact} />
</BaseLayout>
