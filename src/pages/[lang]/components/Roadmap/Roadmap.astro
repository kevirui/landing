---
import RoadmapContainer from '@components/Roadmap/RoadmapContainer.jsx';

interface Props {
  roadmap: {
    title: string;
    keyFeaturesLabel: string;
    timeline: {
      quarters: Array<{
        label: string;
        completed: boolean;
      }>;
    };
    phases: Array<{
      title: string;
      description: string;
      milestones: Array<{
        text: string;
        completed: boolean;
      }>;
    }>;
  };
}

const { roadmap } = Astro.props;
---

<section class="py-8 sm:py-12 md:py-18 lg:py-24 px-3 sm:px-4 md:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Title -->
    <h2
      class="text-xl sm:text-2xl md:text-4xl lg:text-5xl xl:text-6xl font-montserrat font-bold mb-5 sm:mb-6 md:mb-8 lg:mb-12"
    >
      {roadmap.title}
    </h2>

    <!-- Roadmap Container (Timeline + Carousel) -->
    <RoadmapContainer
      client:only="react"
      quarters={roadmap.timeline.quarters}
      phases={roadmap.phases}
      keyFeaturesLabel={roadmap.keyFeaturesLabel}
    />
  </div>
</section>
