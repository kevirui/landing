---
import SummaryCard from '@components/Model/SummaryCard.astro';
import type { Language } from '@custom-types/index';
import es from '@i18n/locales/es.json';
import en from '@i18n/locales/en.json';
import pt from '@i18n/locales/pt.json';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const translations = { es, en, pt };
const t = translations[lang];
const content = t.model_page.summary;
---

<section class="py-16 text-white">
  <div class="container mx-auto px-4">
    <div class="mb-12">
      <h2 class="text-5xl font-bold mb-6">{content.title}</h2>
      <p class="text-xl md:text-2xl font-light max-w-4xl mb-8">
        {content.subtitle}
      </p>
      <p class="text-sm md:text-base max-w-4xl">
        {content.description}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <SummaryCard
        title={content.cards.step_a.title}
        description={content.cards.step_a.description}
        list={content.cards.step_a.list}
      />
      <SummaryCard
        title={content.cards.step_b.title}
        description={content.cards.step_b.description}
        list={content.cards.step_b.list}
      />
      <SummaryCard
        title={content.cards.step_c.title}
        list={content.cards.step_c.list}
      />
    </div>
  </div>
</section>
