---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  icon: string;
  functionality: string;
  advantage: string;
  idealFor: string;
  status: 'available' | 'coming_soon';
  isActive?: boolean;
}

const {
  title,
  subtitle,
  description,
  icon,
  functionality,
  advantage,
  idealFor,
  status,
  isActive = false,
} = Astro.props;
---

<div
  class={`
    relative bg-gradient-to-br from-[#8FAF8F] to-[#7FA87F] rounded-3xl p-8 md:p-10 transition-all duration-300 cursor-pointer text-white
    ${isActive ? 'ring-4 ring-white shadow-2xl scale-105' : 'hover:shadow-2xl hover:scale-102'}
  `}
>
  {/* Status Badge */}
  {
    status === 'coming_soon' && (
      <div class="absolute top-6 right-6 bg-white/20 backdrop-blur-sm text-white text-xs font-bold px-4 py-2 rounded-full border border-white/30">
        Próximamente
      </div>
    )
  }

  {/* Icon */}
  <div class="mb-8 flex justify-center">
    <div
      class="w-28 h-28 bg-white/20 backdrop-blur-sm rounded-3xl flex items-center justify-center p-6 border-2 border-white/30"
    >
      <img
        src={`/icons/services/${icon}`}
        alt={title}
        class="w-full h-full object-contain filter brightness-0 invert"
      />
    </div>
  </div>

  {/* Title & Subtitle */}
  <div class="text-center mb-6">
    <h3 class="text-2xl md:text-3xl font-bold mb-2">{title}</h3>
    <p class="text-sm md:text-base font-light italic opacity-90">{subtitle}</p>
  </div>

  {/* Description */}
  <p class="text-center mb-8 leading-relaxed opacity-95">
    {description}
  </p>

  {/* Three Sections */}
  <div class="space-y-6">
    {/* Funcionalidad */}
    <div>
      <h4 class="font-bold text-lg mb-2 flex items-center gap-2">
        <span class="text-xl">•</span> Funcionalidad
      </h4>
      <p class="text-sm leading-relaxed opacity-90 pl-6">
        {functionality}
      </p>
    </div>

    {/* Ventaja */}
    <div>
      <h4 class="font-bold text-lg mb-2 flex items-center gap-2">
        <span class="text-xl">•</span> Ventaja
      </h4>
      <p class="text-sm leading-relaxed opacity-90 pl-6">
        {advantage}
      </p>
    </div>

    {/* Ideal para */}
    <div>
      <h4 class="font-bold text-lg mb-2 flex items-center gap-2">
        <span class="text-xl">•</span> Ideal para
      </h4>
      <p class="text-sm leading-relaxed opacity-90 pl-6">
        {idealFor}
      </p>
    </div>
  </div>
</div>

<style>
  .hover\:scale-102:hover {
    transform: scale(1.02);
  }
</style>
