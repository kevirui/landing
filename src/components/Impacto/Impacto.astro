---
import MetricCard from '@components/Impacto/MetricCard.astro';
import MetricModal from '@components/Impacto/MetricModal.jsx';

interface Props {
  impacto: {
    title: string;
    subtitle: string;
    metrics: {
      investment: {
        value: string;
        label: string;
        description: string;
      };
      savings: {
        value: string;
        label: string;
        description: string;
      };
      organizations: {
        value: string;
        label: string;
        description: string;
      };
      identities: {
        value: string;
        label: string;
        description: string;
      };
    };
  };
}

const { impacto } = Astro.props;
---

<section
  class="py-12 sm:py-16 md:py-20 lg:py-24 px-4 sm:px-6 md:px-8"
  style="background-color: #E8F5E9;"
>
  <div class="max-w-7xl mx-auto">
    <div class="mb-8 sm:mb-10 md:mb-12">
      <h2
        class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-montserrat font-bold mb-3 sm:mb-4 md:mb-6"
        style="color: #2E7D32;"
      >
        {impacto.title}
      </h2>
      <p
        class="text-gray-700 text-sm sm:text-base md:text-lg leading-relaxed max-w-4xl"
      >
        {impacto.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6 md:gap-8">
      <MetricCard
        id="investment"
        value={impacto.metrics.investment.value}
        label={impacto.metrics.investment.label}
        imageSrc="/imgs/index/image_1.jpg"
        imageAlt="Agricultural field"
      />
      <MetricCard
        id="savings"
        value={impacto.metrics.savings.value}
        label={impacto.metrics.savings.label}
        imageSrc="/imgs/index/image_2.jpg"
        imageAlt="Forest landscape"
      />
      <MetricCard
        id="organizations"
        value={impacto.metrics.organizations.value}
        label={impacto.metrics.organizations.label}
        imageSrc="/imgs/index/image_3.jpg"
        imageAlt="Rural scene"
      />
      <MetricCard
        id="identities"
        value={impacto.metrics.identities.value}
        label={impacto.metrics.identities.label}
        imageSrc="/imgs/index/image_4.jpg"
        imageAlt="Person working in field"
      />
    </div>

    <!-- Modals -->
    <MetricModal
      client:only="react"
      id="investment"
      value={impacto.metrics.investment.value}
      label={impacto.metrics.investment.label}
      description={impacto.metrics.investment.description}
      imageSrc="/imgs/index/image_1.jpg"
      imageAlt="Agricultural field"
    />
    <MetricModal
      client:only="react"
      id="savings"
      value={impacto.metrics.savings.value}
      label={impacto.metrics.savings.label}
      description={impacto.metrics.savings.description}
      imageSrc="/imgs/index/image_2.jpg"
      imageAlt="Forest landscape"
    />
    <MetricModal
      client:only="react"
      id="organizations"
      value={impacto.metrics.organizations.value}
      label={impacto.metrics.organizations.label}
      description={impacto.metrics.organizations.description}
      imageSrc="/imgs/index/image_3.jpg"
      imageAlt="Rural scene"
    />
    <MetricModal
      client:only="react"
      id="identities"
      value={impacto.metrics.identities.value}
      label={impacto.metrics.identities.label}
      description={impacto.metrics.identities.description}
      imageSrc="/imgs/index/image_4.jpg"
      imageAlt="Person working in field"
    />
  </div>
</section>
