---
interface Props {
  title: string;
  description: string;
  milestones: Array<{
    text: string;
    completed: boolean;
  }>;
}

const { title, description, milestones } = Astro.props;
---

<div class="bg-white rounded-2xl shadow-lg p-6 md:p-8 max-w-4xl mx-auto">
  <!-- Card Title -->
  <h3
    class="text-2xl md:text-3xl font-montserrat font-bold mb-4"
    style="color: #2E7D32;"
  >
    {title}
  </h3>
  
  <!-- Description -->
  <p
    class="text-base md:text-lg mb-6 leading-relaxed"
    style="color: #2E7D32;"
  >
    {description}
  </p>
  
  <!-- Milestones -->
  <div class="space-y-3">
    {milestones.map((milestone) => (
      <div class="flex items-start gap-3">
        {milestone.completed ? (
          <div
            class="shrink-0 w-6 h-6 rounded-full flex items-center justify-center mt-0.5"
            style="background-color: #4A9B7F;"
          >
            <svg
              class="w-4 h-4 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="3"
                d="M5 13l4 4L19 7"
              />
            </svg>
          </div>
        ) : (
          <div
            class="shrink-0 w-6 h-6 rounded-full border-2 mt-0.5"
            style="border-color: #4A9B7F;"
          ></div>
        )}
        <p
          class={`text-base md:text-lg ${
            milestone.completed ? 'text-gray-800' : 'text-gray-600'
          }`}
        >
          {milestone.text}
        </p>
      </div>
    ))}
  </div>
</div>

