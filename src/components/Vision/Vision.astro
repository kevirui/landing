---
import Card from '@components/common/Card.astro';

interface Props {
  vision: {
    title: string;
    description: {
      part1: string;
      part2: string;
      part3: string;
      part4: string;
      part5: string;
      part6: string;
    };
    cards: {
      validation: {
        title: string;
        description: string;
      };
      impact: {
        title: string;
        description: string;
      };
      offline: {
        title: string;
        description: string;
      };
    };
  };
}

const { vision } = Astro.props;
---

<section class="bg-white py-12 sm:py-16 md:py-20 lg:py-24 px-4 sm:px-6 md:px-8">
  <div class="max-w-7xl mx-auto">
    <h2
      class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-montserrat font-bold text-gray-900 mb-4 sm:mb-6 md:mb-8"
    >
      {vision.title}
    </h2>

    <p
      class="text-gray-700 text-sm sm:text-base md:text-lg leading-relaxed mb-8 sm:mb-10 md:mb-12 max-w-4xl"
    >
      <strong class="font-semibold">{vision.description.part1}</strong>
      {vision.description.part2}{' '}
      <strong class="font-semibold">{vision.description.part3}</strong>
      {vision.description.part4}{' '}
      <strong class="font-semibold">{vision.description.part5}</strong>
      {vision.description.part6}
    </p>

    <!-- Tarjetas -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
      <Card
        title={vision.cards.validation.title}
        description={vision.cards.validation.description}
      />
      <Card
        title={vision.cards.impact.title}
        description={vision.cards.impact.description}
      />
      <Card
        title={vision.cards.offline.title}
        description={vision.cards.offline.description}
      />
    </div>
  </div>
</section>
