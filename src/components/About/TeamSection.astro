---
import TeamMember from '@components/About/TeamMember.astro';
import type { Language } from '@custom-types/index';
import es from '@i18n/locales/es.json';
import en from '@i18n/locales/en.json';
import pt from '@i18n/locales/pt.json';
import { TEAM_MEMBERS } from '@data/teamConfig';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const translations = { es, en, pt };
const t = translations[lang];
---

<div class="container mx-auto px-4 pt-24 pb-16">
  <div class="mb-16">
    <h1 class="text-6xl font-bold mb-6">{t.about_page.title}</h1>
    <p class="text-xl max-w-4xl">
      {t.about_page.description}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {
      TEAM_MEMBERS.map(member => (
        <TeamMember
          name={member.name}
          image={member.image}
          linkedin={member.linkedin}
          linkedinProfile={member.linkedinProfile}
          role={t.about_page.team[member.id].role}
          bio={t.about_page.team[member.id].bio}
        />
      ))
    }
  </div>
</div>
