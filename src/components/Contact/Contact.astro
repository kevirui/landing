---
import ContactForm from '@components/Contact/ContactForm.jsx';
import FollowUs from '@components/Contact/FollowUs.astro';

interface Props {
  contact: {
    title: string;
    contactInfo: {
      title: string;
      email: string;
      location: string;
    };
    followUs: {
      title: string;
    };
    form: {
      title: string;
      fields: {
        name: string;
        email: string;
        socialNetwork: string;
        message: string;
      };
      send: string;
      sending: string;
      success: string;
      error: string;
    };
    socialLinks: {
      twitter: string;
      linkedin: string;
      youtube: string;
    };
  };
}

const { contact } = Astro.props;
---

<section class="py-12 sm:py-16 md:py-20 lg:py-24 px-4 sm:px-6 md:px-8">
  <div class="max-w-7xl mx-auto">
    <h2
      class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-montserrat font-bold text-white mb-12 sm:mb-16 md:mb-20"
    >
      {contact.title}
    </h2>

    <div class="flex flex-col items-center gap-12 sm:gap-16 md:gap-20">
      <!-- Formulario centrado -->
      <div class="w-full max-w-md">
        <ContactForm client:only="react" form={contact.form} />
      </div>

      <!-- SÃ­guenos centrado -->
      <div class="flex flex-col items-center">
        <FollowUs
          title={contact.followUs.title}
          socialLinks={contact.socialLinks}
        />
      </div>
    </div>
  </div>
</section>
