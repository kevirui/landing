---
import ContactInfoItem from '@components/Contact/ContactInfoItem.astro';

interface Props {
  title: string;
  email: string;
  location: string;
}

const { title, email, location } = Astro.props;
---

<div>
  <h3
    class="text-xl sm:text-2xl md:text-3xl font-montserrat font-semibold text-white mb-4 sm:mb-6"
  >
    {title}
  </h3>
  <div class="flex flex-col gap-3 sm:gap-4">
    <ContactInfoItem icon="email" text={email} />
    <ContactInfoItem icon="location" text={location} />
  </div>
</div>
