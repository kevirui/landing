---
import SocialIcon from '@components/Contact/SocialIcon.astro';
import { SOCIAL_ICONS } from '@data/socialConfig';

interface Props {
  title: string;
  socialLinks: {
    twitter: string;
    linkedin: string;
    youtube: string;
  };
}

const { title, socialLinks } = Astro.props;
---

<div class="flex flex-col items-center">
  <h3
    class="text-xl sm:text-2xl md:text-3xl font-montserrat font-semibold text-white mb-4 sm:mb-6 text-center"
  >
    {title}
  </h3>
  <div class="flex gap-3 sm:gap-4">
    {
      SOCIAL_ICONS.map(icon => (
        <SocialIcon
          href={socialLinks[icon.platform]}
          label={icon.label}
          iconPath={icon.iconPath}
        />
      ))
    }
  </div>
</div>
