---
interface Props {
  title: string;
  description: string;
  backgroundColor?: string;
  class?: string;
}

const {
  title,
  description,
  backgroundColor = '#4A9B7F',
  class: className = '',
} = Astro.props;
---

<div
  class={`rounded-xl p-4 sm:p-5 md:p-6 lg:p-8 ${className}`}
  style={`background-color: ${backgroundColor}`}
>
  <h3 class="text-xl sm:text-2xl md:text-2xl lg:text-3xl font-montserrat font-bold text-white mb-3 sm:mb-4">
    {title}
  </h3>
  <p class="text-white text-xs sm:text-sm md:text-base leading-relaxed">{description}</p>
</div>
