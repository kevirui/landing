---
import PartnerLogo from '@components/common/PartnerLogo.astro';
import { PARTNERS } from '@data/partnersConfig';
---

<div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6">
  <p
    class="text-white text-center text-base sm:text-lg md:text-xl font-montserrat font-bold mb-4 sm:mb-6 md:mb-8"
  >
    Powered By
  </p>

  <div
    class="flex flex-wrap items-center justify-center gap-4 sm:gap-6 md:gap-8 lg:gap-12 xl:gap-16"
  >
    {
      PARTNERS.map(partner => (
        <PartnerLogo
          src={partner.logo}
          alt={partner.name}
          href={partner.href}
        />
      ))
    }
  </div>
</div>
