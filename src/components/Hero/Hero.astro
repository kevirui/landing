---
import PoweredBy from './PoweredBy.astro';

interface Props {
  hero: {
    tag: string;
    headline: {
      line1: string;
      line2: string;
      line3: string;
      line4: string;
    };
  };
}

const { hero } = Astro.props;
---

<main
  class="relative min-h-screen flex flex-col justify-between px-4 sm:px-6 md:px-8 lg:px-12"
>
  <div class="absolute inset-0 w-full h-full overflow-hidden">
    <video
      autoplay
      loop
      muted
      playsinline
      class="absolute inset-0 w-full h-full object-cover"
    >
      <source src="/videos/banner.mp4" type="video/mp4" />
    </video>
    <div class="absolute inset-0 bg-gray-900/40"></div>
  </div>

  <div
    class="relative z-10 w-full max-w-7xl mx-auto flex-1 flex flex-col justify-center py-12 sm:py-16 md:py-20 lg:py-24"
  >
    <div class="mb-4 sm:mb-6 md:mb-8">
      <span
        class="inline-block px-3 py-1.5 sm:px-4 sm:py-2 bg-gray-200/80 text-gray-800 rounded-lg text-xs sm:text-sm font-montserrat font-semibold uppercase tracking-wide"
      >
        {hero.tag}
      </span>
    </div>

    <h1
      class="font-montserrat font-bold text-white text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl 2xl:text-8xl leading-tight sm:leading-tight md:leading-tight"
    >
      <span class="block">{hero.headline.line1}</span>
      <span class="block">{hero.headline.line2}</span>
      <span class="block">{hero.headline.line3}</span>
      <span class="block">{hero.headline.line4}</span>
    </h1>
  </div>

  <div class="relative z-10 pb-8 sm:pb-12 md:pb-16">
    <PoweredBy />
  </div>
</main>
